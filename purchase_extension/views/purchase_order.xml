<odoo>
    <data>
        <record id="purchase_order_inherit_price_paper" model="ir.ui.view">
            <field name="name">Purchase.order.form.pricepaper</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name='payment_term_id' position='attributes'>
                    <attribute name='domain'>[('order_type', '=', 'purchase')]</attribute>
                </field>
                <xpath expr="/form/sheet/group/group[2]" position="after">
                    <xpath expr="//notebook/page[@name='purchase_delivery_invoice']/group/group[1]" position="move"/>
                </xpath>
                <field name='date_order' position="after">
                    <field name="release_date" string="Date Wanted"/>
                </field>
                <xpath expr="//button[@name='action_view_invoice']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ('purchase', 'received', 'done')), ('invoice_status', 'in', ('no', 'invoiced'))]}</attribute>
                </xpath>
                 <xpath expr="//button[10]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ('purchase', 'received', 'done')), ('invoice_status', 'in', ('no', 'invoiced'))]}</attribute>
                </xpath>
                <xpath expr="//button[@name='button_done']" position="attributes">
                    <attribute name="states">purchase,received</attribute>
                </xpath>

                <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="before">
                    <group name="weight_volume">
                        <field name="total_volume"/>
                        <field name="total_weight"/>
                        <field name="total_qty"/>
                    </group>
                </xpath>

                <xpath expr="//field[@name='order_line']" position="before">
                    <button type="object" name="add_sale_history_to_po_line"
                            string="ADD ADDITIONAL PRODUCTS" icon="fa-history" class="oe_edit_only oe_highlight"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="before">
                    <field name="gross_volume"/>
                    <field name="gross_weight"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="before">
                    <button name="show_sales_history" type="object" icon="fa-history" string="Show sales history"/>
                </xpath>
                <xpath expr="//notebook" position="after">
                    <separator/>
                    <field name="purchase_default_message"/>
                </xpath>
                <xpath expr="//field[@name='requisition_id']" position="after">
                    <field name="vendor_delay"/>
                    <field name="vendor_order_freq"/>
                </xpath>

            </field>
        </record>

        <record id="purchase.purchase_rfq" model="ir.actions.act_window">
            <field name="context">{'search_default_my_purchases':1, 'search_default_draft':1}</field>
        </record>

         <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.purchase.inherit.purchase.extension</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-string='Purchase']/div[3]/div" position="inside">
                <br/>
                <div class="o_setting_left_pane"/>
                <div class="o_setting_right_pane">
                <span class="o_form_label">Supplier Info</span>
                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                <div class="text-muted">
                    Supplier default start &amp; end date.
                </div>
                <div class="content-group">
                    <div class="row mt16">
                        <label string="Start Date" for="supplier_start_date" class="col-lg-3 o_light_label"/>
                        <field name="supplier_start_date" placeholder="day/month/year example(08/11/2021)"/>
                    </div>
                    <div class="row">
                        <label string="End Date" for="supplier_end_date" class="col-lg-3 o_light_label"/>
                        <field name="supplier_end_date" placeholder="day/month/year example(08/11/2021)"/>
                    </div>
                </div>
                </div>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
