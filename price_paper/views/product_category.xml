<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_category_form_view_inherit_account_extension" model="ir.ui.view">
            <field name="name">account.extension.product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="account.view_category_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='account_property']/group[1]" position="after">
                    <group string="Storage Contract">
                        <field name="sc_stock_valuation_account_id"/>
                        <field name="sc_stock_liability_account_id"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>