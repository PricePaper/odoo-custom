<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_line_tree_pricepaper" model="ir.ui.view">
            <field name="name">purchase.order.line.tree</field>
            <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
                <tree string="Purchase Order Lines" create="false">
                    <field name="order_id"/>
                    <field name="name"/>
                    <field name="partner_id" string="Vendor" />
                    <field name="product_id"/>
                    <field name="state"/>
                    <field name="price_unit"/>
                    <field name="product_qty"/>
                    <field name="product_uom" groups="uom.group_uom"/>
                    <field name="price_subtotal" widget="monetary"/>
                    <field name="date_planned"  widget="date"/>
                </tree>
            </field>
        </record>
        <record id="act_res_partner_2_purchase_order_line" model="ir.actions.act_window">
            <field name="name">Purchase Order Lines</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="purchase_order_line_tree_pricepaper"/>
            <field name="context">{'search_default_product_id': [active_id],
                                   'default_product_id': active_id}</field>
            <field name="domain">[('state', 'in', ['purchase'])]</field>
        </record>



        <record id="purchase_line_accounting_differnce_form" model="ir.ui.view">
            <field name="name">purchase.order.line.accounting.difference</field>
            <field name="model">purchase.order.line</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <form string="Purchase Order Item">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="order_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="product_uom_qty" readonly="1"/>
                                <field name="qty_received" readonly="1"/>
                                <field name="qty_invoiced"/>
                                <field name="product_uom" readonly="1"/>
                                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                                <field name="partner_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="price_unit" readonly="1"/>
                                <field name="price_subtotal" widget="monetary"/>
                                <field name="taxes_id" widget="many2many_tags" readonly="1"/>
                                <field name="price_tax" widget="monetary"/>
                                <field name="price_total" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="accounting_difference" invisible="0"/>
                                <field name="stock_journal_item" invisible="0"/>
                                <field name="invoice_journal_item" invisible="0"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_line_accounting_difference_tree" model="ir.ui.view">
            <field name="name">purchase.order.line.price.paper</field>
            <field name="model">purchase.order.line</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <tree string="Purchase Order Lines" editable="top" create="0" edit="0">
                    <field name="partner_id" readonly="1" string="VENDOR NAME"/>
                    <field name="order_id" readonly="1" string="ORDER#"/>
                    <field name="product_id" readonly="1" string="ITEM #"/>
                    <field name="product_uom_qty" readonly="1" string="QTY"/>
                    <field name="accounting_difference"/>
                </tree>
            </field>
        </record>
        <record id="action_purchase_line_accounting_differnce" model="ir.actions.act_window">
            <field name="name">Purchase Order Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="search_view_id" ref="sales_order_line_filter_report"/> -->
            <!-- <field name="context">{'search_default_not_in_done': 1, 'search_default_group_by_order_id': 1}</field> -->
        </record>

        <record model="ir.actions.act_window.view" id="action_purchase_line_reports_price_paper_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="purchase_line_accounting_difference_tree"/>
            <field name="act_window_id" ref="action_purchase_line_accounting_differnce"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_sale_line_reports_price_paper_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_line_accounting_differnce_form"/>
            <field name="act_window_id" ref="action_purchase_line_accounting_differnce"/>
        </record>

        <menuitem action="action_purchase_line_accounting_differnce"
                  name="Accounting Difference"
              id="menu_action_purchase_line_accounting_differnce"
              parent="purchase.menu_procurement_management"
              sequence="18"/>
    </data>
</odoo>
