<odoo>
    <data>
        <record id="default_stock_picking_return_reason" model="stock.picking.return.reason">
            <field name="name">we're short inventory</field>
        </record>
        
        <record id="seq_batch_payment_common" model="ir.sequence">
            <field name="name">Batch Payment Common</field>
            <field name="code">batch.payment.common</field>
            <field name="prefix">BATCHPAYMENT/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="batch_picking_driver_invoice" model="product.product">
            <field name="name">Truck Driver Batch Invoice</field>
            <field name="standard_price">0.0</field>
            <field name="list_price">0.0</field>
            <field name="type">service</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description_sale"> </field>
            <field name="default_code">batch_driver_invoice</field>
        </record>

        <record id="stock_return_notification_mail" model="mail.template">
            <field name="name">Short Ship: Notification</field>
            <field name="model_id" ref="batch_delivery.model_stock_picking_return"/>
            <field name="email_from">${user.partner_id.email | safe}</field>
            <field name="partner_to">${ctx['partner_to']}</field>
            <field name="subject">Short Ship!!</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        <strong>Short Ship!</strong>
        <br/>
            <p style="margin: 0px;">
                <span>Customer: ${object.picking_id.partner_id.name}</span><br/>
                <span style="margin-top: 8px;">SO: ${object.sale_id.name}</span><br/>
                <span style="margin-top: 8px;">Date: ${ctx['return_date']}</span><br/>
            </p>
        <br/>
        <table style="font-size:11px;">
            <tbody>
                <tr>
                    <th style="width:135px;text-align:left">Product</th>
                    <th style="width: 85px;text-align:center">Reason</th>
                    <th style="width: 85px;text-align:center">Ordered</th>
                    <th style="width: 85px;text-align:center">Shipped</th>
                </tr>
                % for row in object.return_line_ids:
                    <tr>
                        <td> ${row.product_id.display_name}</td>
                        <td> ${row.reason_id.name}</td>
                        <td style="text-align:center"> ${row.ordered_qty}</td>
                        <td style="text-align:center"> ${row.delivered_qty}</td>
                    </tr>
                %endfor
            </tbody>
        </table>
    </p>
</div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>

         <record id="email_price_paper_pending_product_mail" model="mail.template">
            <field name="name">Pending Product Summery: PricePaper</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">Pending Product Summery</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${ctx['partner_email']|safe}</field>
            <field name="body_html" type="html">
<table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td align="center">
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
<tbody>
    <!-- HEADER -->
    <tr>
        <td align="center" style="min-width: 590px;">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                <tr><td valign="middle">
                    <span style="font-size: 20px;">Summery</span><br/>
                </td><td valign="middle" align="right">
                    <img src="/logo.png?company=${user.company_id.id}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="'%s' % company.name"/>
                </td></tr>
                <tr><td colspan="2" style="text-align:center;">
                  <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:16px 0px 16px 0px;"/>
                </td></tr>
            </table>
        </td>
    </tr>
    <!-- CONTENT -->
    <tr>
        <td colspan="99" style="padding: 25px; border-bottom: solid 1px;font-size:25px;">
            <strong>Pending Product</strong>
        </td>
    </tr>
    <tr>
        <td style="width: 100%;">
            <table border="0" cellpadding="2" cellspacing="2" width="100%" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                <tr valign="top" style="font-size: 12px;">
                    <th style="border-bottom: 1px solid black;">Partner</th>
                    <th style="border-bottom: 1px solid black;">Sale Order</th>
                    <th style="border-bottom: 1px solid black;">Product</th>
                    <th style="border-bottom: 1px solid black;">Alternative Product</th>
                    <th style="border-bottom: 1px solid black;">Order Qty</th>
                    <th style="border-bottom: 1px solid black;">Available Qty</th>
                    <th style="border-bottom: 1px solid black;">Product UOM</th>
                    <th style="border-bottom: 1px solid black;">Note</th>
                </tr>
                % for line in ctx['summery_list']:
                    <tr valign="top" style="font-size: 11px;">
                        <td>${line.picking_id.partner_id.display_name}</td>
                        <td>${line.picking_id.sale_id.display_name}</td>
                        <td>${line.product_id.display_name}</td>
                        <td>
                            <ul>
                            % for product in line.same_product_ids:
                                <li>${product.display_name}</li>
                            % endfor
                            </ul>
                        </td>
                        <td>${line.product_uom_qty}</td>
                        <td>${line.reserved_available_qty}</td>
                        <td>${line.product_uom.display_name}</td>
                        <td>${line.note or ''}</td>
                    </tr>
                % endfor
            </table>
        </td>
    </tr>
    <tr>
        <td style="text-align:center;">
            <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
        </td>
    </tr>
    <!-- FOOTER -->
    <tr>
        <td align="center" style="min-width: 590px;">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                <tr><td valign="middle" align="left">
                    ${user.company_id.name}
                </td></tr>
                <tr><td valign="middle" align="left" style="opacity: 0.7;">
                    ${user.company_id.phone}
                    % if user.company_id.phone and (user.company_id.email or user.company_id.website)
                    |
                    % endif
                    % if user.company_id.email
                    <a href="'mailto:%s' % ${user.company_id.email}" style="text-decoration:none; color: #454748;">${user.company_id.email}</a>
                    % endif
                    % if user.company_id.email and user.company_id.website
                    |
                    % endif
                    % if user.company_id.website
                    <a href="'%s' % ${user.company_id.website}" style="text-decoration:none; color: #454748;">
                    ${user.company_id.website}
                    </a>
                    % endif
                </td></tr>
            </table>
        </td>
    </tr>
</tbody>
</table>
</td></tr>
</table>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
